{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "Noteferatu",
  "version": "0.1.0",
  "identifier": "com.noteferatu.dev",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Noteferatu",
        "width": 900,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
	"transparent": true,
	"decorations": true
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
